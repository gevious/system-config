# Bare minimum config for a new system along with 'includes' for more options

# Variables
set $mod Shift+Ctrl
set $modMeta Mod1
# Direction keys
set $left h
set $down j
set $up k
set $right l

# Workspaces
set $ws0 "0"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws8 "8"
set $ws9 "9"

include ./keybindings.conf
include ./window-decorations.conf
include ./app-placement.conf
include ./theme.conf
include ./autostart.conf

focus_on_window_activation smart

# Set up monitors for laptop, home office or vecna office 
# NOTE: ensure /etc/udev/rules.d/99-sway-monitor-hotplug.rules for automatically reloading sway
exec_always env \
	LEFT_WS1=$ws2 LEFT_WS2=$ws3 \
	RIGHT_WS1=$ws9 RIGHT_WS2=$ws0 \
	/home/gevious/.config/sway/scripts/monitor-setup
